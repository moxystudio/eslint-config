{
    "root": true,
    "env": {
        "node": true
    },
    "extends": [
        "./packages/eslint-config-base/cjs/es2015"
    ],
    "overrides": [
        {
            "files": "**/*.js",
            "excludedFiles": [
                "./index.spec.js",
                "./*.config.js"
            ],
            "rules": {
                "quote-props": [2, "always"]
            }
        },
        {
            "files": "./index.spec.js",
            "extends": [
                "./packages/eslint-config-jest"
            ]
        }
    ]
}
