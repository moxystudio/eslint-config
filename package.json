{
  "name": "root",
  "private": true,
  "scripts": {
    "lint": "lerna run lint",
    "test": "lerna run test",
    "prerelease": "npm run test && npm run lint",
    "release": "lerna version --no-commit-hooks --no-push",
    "postrelease": "git push --follow-tags origin HEAD && lerna publish from-git"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@moxy/eslint-config": "^10.1.1",
    "eslint": "^6.8.0",
    "lerna": "^3.20.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
